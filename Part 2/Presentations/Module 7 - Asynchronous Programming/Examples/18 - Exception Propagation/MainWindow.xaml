<Window x:Class="Wincubate.Module07.Slide18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="btnGo"
                Margin="10"
                Click="OnRunTaskGraph">Run Task Graph</Button>
        <Button x:Name="btnInstallUnhandledExceptionFilter"
                Margin="10"
                Click="OnInstallHandlerClick">Install Handler for UnobservedTaskException</Button>
    </StackPanel>
</Window>
