<Window x:Class="Wincubate.Module07.Slide18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button x:Name="btnThrowHandled"
                Margin="10"
                Click="OnThrowHandledClick">Throw Handled</Button>
        <Button x:Name="btnThrowUnhandled"
                Margin="10"
                Click="OnThrowUnhandledClick">Throw Unhandled</Button>
        <Button x:Name="btnInstallHandler"
                Margin="10"
                Click="OnInstallHandlerClick">Install Handler for UnobservedTaskException</Button>
        <Button x:Name="btnClear"
                Margin="10"
                Click="OnClearClick">Clear</Button>
        <Label x:Name="lblResult"
               Margin="10"></Label>
    </StackPanel>
</Window>
